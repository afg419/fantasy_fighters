<%= form_for(@fight, url: combat_federation_fight_path) do |f| %>

  <%= select_tag(:combatant_1, options_for_select(
  Combatant.includes(:dojo).all.map { |combatant| combatant.dojo.dojo_name + ": " + combatant.name}
))
  %>

  <%= select_tag(:combatant_2, options_for_select(
  Combatant.includes(:dojo).all.map { |combatant| combatant.dojo.dojo_name + ": " + combatant.name}
))
   %>

  <%= f.submit "Fight!"  %>

<% end %>
